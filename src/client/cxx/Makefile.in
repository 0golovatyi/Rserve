# Makefile for C++ Rserve clients.
#
# $Id$

SRC = $(wildcard *.cc)
OBJ = $(SRC:%.cc=%.o)
DST = demo1 rcons

LIBS+=@LIBS@
CPPFLAGS+=-DHAVE_CONFIG_H

all: $(DST)

demo1: Rconnection.o demo1.o
	$(CXX) $^ -o $@ $(LIBS)

rcons: Rconnection.o rcons.o
	$(CXX) $^ -o $@ $(LIBS)

rcmd: Rconnection.o rcmd.o
	$(CXX) $^ -o $@ $(LIBS)

debug:
	CXXFLAGS=-g $(MAKE) all

clean:
	rm -rf *~ *.o \#* .\#* $(DST)
